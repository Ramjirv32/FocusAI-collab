{
    "manifest_version": 3,
    "name": "FocusAI - Tab Tracker",
    "version": "1.0",
    "description": "Tracks active tab, usage time and sends to FocusAI backend.",
    "permissions": ["tabs", "storage", "activeTab", "scripting"],
    "host_permissions": ["http://localhost:5000/*"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  